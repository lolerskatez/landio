# LandIO Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
# Generate a strong random secret for production
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_TIMEOUT=3600000

# Database Configuration
DATABASE_PATH=./database.db

# 2FA Configuration
# TOTP Window (number of 30-second windows to allow)
TOTP_WINDOW=2

# Email/SMTP Configuration (optional)
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@landio.io

# Discord Webhook Configuration (optional)
DISCORD_ENABLED=false
DISCORD_WEBHOOK_URL=https://discordapp.com/api/webhooks/your-webhook-id/token

# Application Configuration
APP_NAME=LandIO
APP_URL=http://localhost:3001

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Features
ENABLE_SSO=false
ENABLE_2FA_ENFORCEMENT=false
ENABLE_PASSWORD_RESET=true
